@model AmateurLeague.Entity.Team

@{
    ViewData["Title"] = "Create New Team";
}

    <h1>Create New Team</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Team Name</label>
                <input name="TeamName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">League</label>
                <select name="LeagueId" asp-items="@ViewBag.LeagueList" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
