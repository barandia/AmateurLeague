@model AmateurLeague.Entity.League

@{
    ViewData["Title"] = "League Details";
}

<h1>League Details</h1>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            League Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeagueName)
        </dd>
        <dt class="col-sm-2">
            Sport
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sport.DisplayName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LeagueId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
